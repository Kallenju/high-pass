.cases__banner-paragraph
  display -webkit-box
  -webkit-line-clamp 3
  -webkit-box-orient vertical
  overflow hidden
  margin 0
  padding 0
  font-family --font-family-primary, sans-serif
  font-size --font-size_sm
  font-weight --font-weight_xs
  line-height --line-height_lg
  font-style normal
  color --text-color-primary
  @media screen and (max-width --breakpoint_xs)
    font-size --font-size_xs
    line-height --line-height_md
