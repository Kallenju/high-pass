.cases__banner
  position relative
  display flex
  flex-direction column
  justify-content space-between
  align-items flex-start
  margin 0
  padding 3.00rem
  padding-top 2.20rem
  width 100%
  height 100%
  font-family --font-family-primary, sans-serif
  font-size --font-size_sm
  font-weight --font-weight_xs
  line-height --line-height_lg
  font-style normal
  color --text-color-primary
  @media screen and (max-width --breakpoint_md)
    padding 3.00rem
    min-height 30.00rem
  @media screen and (max-width --breakpoint_xs)
    padding-top 19.60rem
    min-height 42.20rem
