.masterclass-banner__master
  margin 0
  margin-bottom 0.30rem
  padding 0
  font-family --font-family-primary, sans-serif
  font-size --font-size_sm
  font-weight --font-weight_xs
  line-height --line-height_sm
  font-style normal
  color --text-color-primary
  @media screen and (max-width --breakpoint_md)
    margin-bottom 0.90rem
  @media screen and (max-width --breakpoint_sm)
    margin-bottom 0.50rem
  @media screen and (max-width --breakpoint_xs)
    margin-bottom 1.35rem
    font-size --font-size_xs
